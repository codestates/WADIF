{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 9
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "rules": {
    "no-return-await": "error",
    "prefer-arrow-callback": "error",
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "require-await": "off",
    "no-unused-vars": "off"
  }
}
